{
  "name": "workmemo-app",
  "version": "2.3.3",
  "author": "ArtyomInc",
  "description": "A todos task and notes talking application build with electron + vue",
  "repository": "https://github.com/ArtyomInc/workmemo-app/",
  "publish": {
    "provider": "github",
    "releaseType": "release"
  },
  "main": "build/main/main.js",
  "scripts": {
    "dev": "npm run lint && npm run typecheck && node scripts/dev-server.js",
    "build:win": "npm run lint && npm run typecheck && node scripts/build.js && electron-builder --win",
    "build:mac": "npm run lint && npm run typecheck && node scripts/build.js && electron-builder --mac",
    "build:linux": "npm run lint && npm run typecheck && node scripts/build.js && electron-builder --linux",
    "lint": "eslint . --fix",
    "typecheck": "vue-tsc --noEmit -p src/main/tsconfig.json"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^4.6.2",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^12.0.0",
    "autoprefixer": "^10.4.19",
    "chalk": "^4.1.2",
    "chokidar": "^3.6.0",
    "electron": "^24.8.8",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-perfectionist": "^2.8.0",
    "eslint-plugin-vue": "^9.24.1",
    "node-sass": "^9.0.0",
    "perfectionist": "^2.4.0",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.13",
    "tailwindcss": "^3.4.3",
    "typescript": "^4.9.5",
    "vite": "^4.5.3",
    "vue-tsc": "^1.8.27"
  },
  "dependencies": {
    "@vueup/vue-quill": "^1.2.0",
    "electron-store": "^8.2.0",
    "electron-updater": "^6.1.8",
    "lucide-vue-next": "^0.368.0",
    "pinia": "^2.1.7",
    "quill-blot-formatter": "^1.0.5",
    "vue": "^3.2.47",
    "vue-router": "^4.3.0"
  }
}
